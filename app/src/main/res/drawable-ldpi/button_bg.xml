<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#96ff8000" />
            <stroke
                android:width="1dp"
                android:color="#96da5f01" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#be0029ac"
                android:endColor="#be03afff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c80b0083" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>